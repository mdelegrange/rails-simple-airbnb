<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to "Flats", flats_path  %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "Add a flat", new_flat_path, class: "btn btn-warning" %>
  </div>
</div>

<div class="container">
  <h1>Add a new flat</h1>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.submit class: 'btn btn-warning'%>
  <% end %>
</div>
